
# —— SpeedComputer47: redirects de base ——
RewriteEngine On

# Forcer HTTPS + non-www
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^www\.speedcomputer47\.fr$ [NC]
RewriteRule ^(.*)$ https://speedcomputer47.fr/$1 [R=301,L]

# /index.html -> /
RewriteCond %{THE_REQUEST} \s/+index\.html[\s?] [NC]
RewriteRule ^index\.html$ https://speedcomputer47.fr/ [R=301,L]

# 301 des slugs anormaux (complète/ajuste selon tes renommages)
Redirect 301 /wifi-reseau-Casseneuil.html /reseaux-wifi-casseneuil.html
Redirect 301 /configurationperipheriqueSainte-Livrade-sur-Lot.html /configuration-peripheriques-sainte-livrade-sur-lot.html
Redirect 301 /pc-lent-ssd-clonage-Saint-Sylvestre-sur-Lot.html /pc-lent-ssd-clonage-saint-sylvestre-sur-lot.html
Redirect 301 /MessagerieCahors.html /messagerie-cahors.html
Redirect 301 /suppression-virus-malware-Pujols.html /suppression-virus-malware-pujols.html
Redirect 301 /sauvegardetonneins.html /sauvegarde-nas-tonneins.html
Redirect 301 /migration-deploiementbias.html /migration-deploiement-bias.html
Redirect 301 /Blog-comparatif-antivirus-2025-bitdefender-norton.html /blog-comparatif-antivirus-2025-bitdefender-norton.html
Redirect 301 "/Blog-wifi-lent-villeneuve-sur-lot-solutions·html" /blog-wifi-lent-villeneuve-sur-lot-solutions.html
# —— 410 GONE pour vieilles URLs introuvables ——
# /tarifs et /tarifs/ (insensible à la casse)
RedirectMatch 410 (?i)^/tarifs/?$

# /D (chemin fantôme)
Redirect 410 /D

# /hello-world et /hello-world/ (les paramètres ?utm_source=... n’empêchent pas le 410)
RedirectMatch 410 (?i)^/hello-world/?$
### ——— Legacy WordPress slugs ———
# Rediriger vers des pages utiles quand c'est pertinent
RewriteRule ^contact/?$ /#contact [R=301,L]
RewriteRule ^services/?$ / [R=301,L]          # ou /particuliers.html / pro.html si tu préfères
RewriteRule ^a-propos/?$ / [R=301,L]

# URL orpheline inconnue -> 410 (Gone)
RewriteRule ^61-2/?$ - [R=410,L]

# Flux / feed WP -> 410
RewriteRule ^comments/feed/?$ - [R=410,L]
RewriteRule ^feed/?$ - [R=410,L]
