
# —— SpeedComputer47: redirects de base ——
RewriteEngine On

# Forcer HTTPS + non-www
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^www\.speedcomputer47\.fr$ [NC]
RewriteRule ^(.*)$ https://speedcomputer47.fr/$1 [R=301,L]

# /index.html -> /
RewriteCond %{THE_REQUEST} \s/+index\.html[\s?] [NC]
RewriteRule ^index\.html$ https://speedcomputer47.fr/ [R=301,L]

